pipeline {
    agent any
    tools { nodejs 'node' }
    environment{
        imageName = 'techwithjio/react-vite-app'
        registryCredential = 'techwithjio'
        dockerImage = ''
    }
    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Image'){
            steps{
                script{
                    dockerImage = docker.build(imageName, '-f project.dockerfile .')
                }
            }
        }
        stage('Deploy Image'){
            steps{
                script{
                    docker.withRegistry("https://registry.hub.docker.com",'dockerhub-creds'){
                        dockerImage.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
    }
}