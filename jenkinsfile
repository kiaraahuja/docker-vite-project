pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Docker Build') {
            steps {
                sh 'sudo docker build -f Dockerfile -t my-vite-react-app .'
            }
        }
        stage('Docker Push') {
            steps {
                withCredentials([string(credentialsId: 'dockerHub', variable: 'dh')]) {
                    sh 'sudo docker push my-docker-hub-username/my-vite-react-app:latest'
                }
            }
        }
    }
}