pipeline {
    agent any
    tools { nodejs 'node' }
    environment{
        imageName = 'kiaraahuja/react-vite-app'
        registryCredential = 'kiaraahuja'
        dockerImage = ''
    }
    stages {
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Image'){
            steps{
                script{
                    dockerImage = docker.build(imageName)
                }
            }
        }
        stage('Docker login'){
            steps{
                script{
                    docker.withRegistry("https://registry.hub.docker.com",'dockerhub-creds'){
                        dockerImage.push("${env.BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Deploy App'){
            steps{
                script{
                    sh """docker run -d -p 3000:3000 --name react-vite-app --rm  $imageName"""
                }
            }
        }
    }
}
